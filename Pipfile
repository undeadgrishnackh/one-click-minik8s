name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]

[packages]
pre-commit = "*"
flake8 = "*"
pytest-describe-it = "*"
pytest-html = "*"
pytest-sugar = "*"
pytest-cov = "*"
pytest = "*"
rich = "*"
